@import "/lib/style/stylesheet.wxss";

.information{
  width: 100%;
  height: 180rpx;
  border-bottom: 1px solid #e8e8e8;
}
.info_top{
  height: 100rpx;
  line-height: 120rpx;
}
.shop_name{
  width: 100%;
  
  font-size: 32rpx;
  font-weight: 300 ;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.price{
  font-size: 30rpx;
  color: #333;
  line-height: 120rpx;
}
.weight{
  font-size: 28rpx;
  color: #999;
  height: 40rpx;
  line-height: 10rpx;
}
.num_left{
  font-size:30rpx;
  color: #999;
}
.num_right{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.sub::after{
  font-family: 'iconfont';
  content: "\e66b";
  color: #5bbc04;
  font-size: 45rpx;
}
.count{
  font-size: 24rpx;
  color: #333;
  padding: 0 14rpx;
}
.plus::after{
  font-family: 'iconfont';
  content: "\e718";
  color: #5bbc04;
  font-size: 45rpx;
}

.buy_now{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: #5bbc04;
  font-size: 32rpx;
  position: fixed;
  right: 0;
  bottom:0;
  letter-spacing: 2px;
}

.scroll-view_H{
    width: 100%;
    text-align: center;
    white-space: nowrap;
}
.scroll_item {
  position: relative;
  width: 84%;
  margin: 0 1%;
  left: -2%;
  display: inline-block;
  border-radius: 20rpx !important ;
  overflow: hidden;
  transform: scale(0.9);
  box-shadow: 0 0 10px #ccc;
  vertical-align: top;
  top: 5%;
  height: 72%;
  background-color: #fff;
 }
.scroll_item:first-child{
    margin-left: 8%;
    left: 0;
}
.scroll_item:last-child{
    margin-right: 8%;
     left: 0;
}
.scroll_item.selected{
     transform: scale(1);
     border: solid 1px #ffcd54;
}
.scroll_item .proImg{
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    width: 100%;
    max-height: 200rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}
.scroll_item image {
    width: 100%;
    float: left;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

