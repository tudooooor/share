@import "/lib/style/stylesheet.wxss";

page{
  background-color: #f8f8f8;
  font-family: "微软雅黑";
}
swiper,swiper image{
  width: 100%;
  height: 400rpx;
}

.shop{
  width: 100%;
  background-color: #fff;
}
.cover{
  width: 35%;
  height: 200rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.cover image{
  width: 100%;
  height: 200rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.discount{
  width: 15%;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}
.percent{
  position: absolute;
  top: 5rpx;
  left: 8rpx;
  font-size: 35rpx;
  color: #fff;
  
}
.discount::after{
  font-family: 'iconfont';
  content: "\e610";
  color: #ffb200;
  font-size: 65rpx;
  position: absolute;
  top: -2rpx;
  left: -5rpx;
}
.information{
  width: 62%;
  margin-left: 3%;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}
.shop_name{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: 300 ;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.fresh{
  font-size:28rpx;
  color: #999;
  line-height: 30rpx;
}
 


.com_right{
  width: 35%;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #333;
  text-align: right;
}
.vip{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 80rpx;
}
.vip_price{
  width: 100%;
  color: #5bbc04;
  font-size:32rpx;
  font-weight:590;
}
.buy{
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 25rpx;
  text-align: center;
  background-color: #5bbc04;
}