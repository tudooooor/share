@import '/lib/style/stylesheet.wxss';
.standard{
  justify-content: flex-start;
  height: 80rpx;
  line-height: 80rpx;
}
.left{
  width: 18%;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.p{
  width: 22%; 
}
.pr{
  width: 78%;
}
.prev::after{
  font-family: 'iconfont';
  content: '\e6b5';
  font-size:14px;
  color: #999;
}
.next::after{
  font-family: 'iconfont';
  content: '\e6a8';
  font-size:14px;
  color: #5bbc04;
}
.right,.desc_right{
  width: 82%;
}
.right input{
  width: 97%;
   height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  border: 1px solid #e8e8e8;
  border-radius: 4px;
}
.desc{
   width: 22%;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  height: 200rpx;
}
.desc_right input{
  width: 97%;
  height: 120rpx;
  margin-top:10rpx;
  border: 1px solid #e8e8e8;
  border-radius: 4px;
}
.upload{
  width:35%;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  height: 200rpx;
}
.standard image{
  width: 200rpx;
  height: 200rpx;
}
.submit{
  position: absolute;
  bottom: 80rpx;
  width: 80%;
  margin-left: 10%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #5bbc04;
  border-radius: 6rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 2px;
}