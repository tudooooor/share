@import "/lib/style/stylesheet.wxss";

page{
  background-color: #fff;
  font-family: "微软雅黑"; 
}
/*角色转换处  */
.roles{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color:#fff;
  border-bottom:1px solid #e5e5e5; 
}
.diancai,.business{
  height: 98rpx;
  line-height: 98rpx;
  font-size:32rpx;
  font-weight: 500;
  color:#999;
}
.diancai{
  width: 10%;
}
.business{
  margin-left: 6%;
  width: 20%;
}
/*侧边栏导航  */
.tab{
  margin-top: 100rpx;
  display:flex;
  flex-direction:column;
}
.tab_list{
  width: 100%;
  display:flex;
  flex-direction:row;
}
.tab_left{
  width: 24%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 28rpx;
  text-align: center;
  color: #666;
  font-weight: 500;
  border-bottom: 1px solid #e5e5e5;
}
.tab_li{
  border-bottom: 1px solid #e5e5e5;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.half_circle::after{
  font-family: 'iconfont';
  font-size: 40rpx;
  content:'\e615';
  color: #5bbc04;
}
/*右侧商品内容展示  */
.tab_right{
  width: 76%;  
}
/*店长推荐 样式  */
.tab_title{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background-color:#eef7e6; 
  display: flex;
  flex-direction: row;
}
.tit_h1{
  margin-left: 3%;
  font-size: 28rpx;
  text-align: center;
  color: #666;
  font-weight: 500;
}
.tit_h3{
  margin-left: 3%;
  font-size: 22rpx;
  line-height: 54rpx;
  color: #999;
  font-weight: 500;
}
/*商品信息展示  */
.goods_list{
  width: 100%;
  /* height: 150rpx; */
}
/*图片区域  */
.cover{
  width: 22%;
  height: 150rpx;
}
.cover image{
  width: 100%;
  margin-top: 15rpx;
  height: 120rpx;
}
/*商品简介  */
.information{
  width: 74%;
  margin-left: 3%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
}
.first_line,.second_line,.third_line{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.goods_name{
  width: 88%;
  min-height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
   font-weight: 300; 
  color: #333;
}
.goods_discount{
  margin-top: 17rpx;
  width: 14%;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 20rpx;
  text-align: center;
  color:#ffb200;
  border-radius: 14rpx;
  border: 1px solid #ffb200; 
}
.second_line{
  height: 40rpx;
  line-height: 35rpx;
}
.sec_left{
  width: 70%;
  font-size: 23rpx;
  font-weight: 300;
  color: #666;
  display: flex;
  flex-direction: row;
}
.like{
  margin-left: 3%;
}
.sec_right{
  width: 30%;
  font-size: 22rpx;
  color: #ffb200;
  text-align: right;
}
.vip{
  width: 50%;
  font-size: 22rpx;
  color: #5bbc04;
  font-weight: 400;
}
/*商品数量显示  */
.count{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end; 
  height: 40rpx;
  line-height: 40rpx;
}
.sub::after{
  font-family: 'iconfont';
  font-size: 36rpx;
  margin-bottom: 2rpx;
  content:'\e66b';
  color: #5bbc04;
}

.plus{
  font-size: 24rpx;
  color: #5bbc04;
}
/*编辑和下架  */
.operating{
  height: 90rpx;
  margin-top: 10rpx;
}
.edit,.undershelf{
  width:35%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #5bbc04;
  border: 1px solid #5bbc04;
  text-align: center;
}
.undershelf{
  margin-left: 5%;
}

/*用户评论  */
.status{
  width:84%;
  margin-top: 120rpx;
  margin-left: 8%;
  height: 70rpx;
  border: 2px solid #5bbc04;
  color: #5bbc04;
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 4px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 10px;
}
.badreview,.unanswered,.all{
  width: 33.3%;
  height: 70rpx;
  line-height: 70rpx;
  text-align:center;
}
/*评论内容  */
.comment{
  width: 100%;
  border-bottom: 10px solid #f8f8f8;
}
.header,.keyword{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
}
.user_name,.review_time{
  font-size: 30rpx;
  font-weight: 450;
  color: #333;
  height: 60rpx;
  line-height:60rpx;

}
.user_name{
  width: 20%;
}
.review_time{
  width: 50%;
}

.keyword{
  height: 40rpx;
  line-height: 40rpx;
}
.trade{
  width: 10%;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  background-color: #f6f5f5;
}
.rank{
  width: 20%;
  margin-left: 2%;
}
.rank::after{
  font-family: 'iconfont';
  content: '\e604';
  color: #fa3137;
  font-size: 24rpx;
  font-weight: bold;
}
.key_comment{
  width: 68%;
  font-size: 24rpx;
  color: #333;
  font-weight: 300;
}
.important{
  display:flex;
  flex-direction:row;
  justify-content: flex-start;
  font-size: 23rpx;
  color: #999;
  height: 70rpx;
  line-height: 80rpx;
}
.orderdetail{
  width:100%;
  height: 140rpx;
  background-color: #f6f5f5;
  border: 1px solid #f8f8f8;
}
.order_title,.order_number{
  height: 70rpx;
  font-size: 26rpx;
}
.order_title{
  line-height: 90rpx;
  color: #999;
}
.order_number{
  line-height: 50rpx;
  color: #333;
}
.action{
  margin-top: 5px;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #e2e2e2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.act_logal::after{
  font-family: 'iconfont';
  content: '\e604';
  color: #999;
  font-size: 45rpx;
}
.activity{
  display: flex;
  flex-direction: row;
  justify-content:flex-end;
  width: 50%;
}
.unreply,.distribute{
  width:33%;
  margin-top: 25rpx;
  height: 50rpx;
  line-height: 50rpx; 
  color: #5bbc04;
  font-size: 30rpx;
  font-weight: 300;
  border-radius: 4px;
  border: 1px solid #5bbc04;
  text-align: center;
}
.distribute{
  margin-left: 5%;
}