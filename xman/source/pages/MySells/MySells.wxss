
page{
  background-color: #f8f8f8;
  font-family: '微软雅黑';
}

.navbar{
  background-color: white;
  position:fixed;
  width: 100%;
}

.deliv_info
{
  margin-top:10rpx;
  background-color: white
}

.info{
  min-height: 70rpx;
  line-height: 70rpx;
  font-size:26rpx;
}
.title_left{
  color: #666;
  width: 18%;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}
.title_right{
  color: #999;
  white-space: pre-line;
}

.order_h1{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: white;
  font-size: 30rpx;
  font-weight: 400;
  display:flex;
}
.standard{
  width: 94%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
}
.all,.pay,.delive,.get,.cancel{
  width: 14%;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}

.standard{
  justify-content: space-between;
}
