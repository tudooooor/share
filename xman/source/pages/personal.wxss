@import '/lib/style/stylesheetnew.wxss';

.header{
  width: 100%;
  height: 220rpx;
  background-color: #5bbc04;
}

image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 100%;
}
.nickname{
  margin-left: 20rpx;
  font-size: 35rpx;
  color: #fff;
}
.func,.fun2{
  height: 179rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #e8e8e8;
}
.func{
  width: 100%;
}
.fun_li,.fun_li1{
  
  height: 179rpx;
  border-right: 1px solid #e8e8e8;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.fun_li{
  width: 24.5%;
}
.fun_li1{
  width: 49.5%;
}
.mark{
  margin-top: 30rpx;
}
.first::after,.second::after,.third::after,.fourth::after,.fifth::after,.sixth::after{
  font-family: 'iconfont';
  font-size: 60rpx;
}
.first::after{
  content: '\e60c';
  color: #5bbc04;
}
.second::after{
  content: '\e635';
  color: #fa3d34;
}
.third::after{
  content: '\e6b2';
  color: #ffb200;
}
.fourth::after{
  content: '\e63b';
  color: #31acfb;
}
.fifth::after{
  content: '\e6c3';
  color: #b822af;
}
.sixth::after{
  content: '\e7bb';
  color: #00bc9c;
}

.txt{
  font-size:26rpx;
  color: #333;
  text-align: center;
  line-height: 40rpx;
}
.fun2{
  width: 50%;
}


.standard_new{
  width: 94%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}