<view class="div nav_fixed">
    <!--data-status="1" href="#" ms-class="nav_cur: all_status==3" ms-click=statusChange(3)-->
    <view class="a fixed_nav_item {{all_status == 3 || all_status == undefined ? 'nav_cur' : ''}}" data-all_status="3" bindtap="statusChange">
        <view class="span nav_txt">全部订单</view>
    </view>
    <!--data-status="2" href="#" ms-class="nav_cur: all_status==0" ms-click=statusChange(0)-->
    <view class="a fixed_nav_item {{all_status == 0 ? 'nav_cur' : ''}}" data-all_status="0" bindtap="statusChange">
        <view class="span nav_txt nav_payment">待付款
            <view class="b nav_payment_num" style="display:none;"></view>
        </view>
    </view>
    <!--data-status="3" href="#" ms-class="nav_cur: all_status==1" ms-click=statusChange(1)-->
    <view class="a fixed_nav_item {{all_status == 1 ? 'nav_cur' : ''}}" data-all_status="1" bindtap="statusChange">
        <view class="span nav_txt nav_receiving">待收货
            <view class="b nav_receiving_num" style="display:none;"></view>
        </view>
    </view>

    <view class="a fixed_nav_item {{all_status == 2 ? 'nav_cur' : ''}}" data-all_status="1" bindtap="statusChange">
        <view class="span nav_txt nav_receiving">已收货
            <view class="b nav_receiving_num" style="display:none;"></view>
        </view>
    </view>

    <view class="a fixed_nav_item {{all_status == 4 ? 'nav_cur' : ''}}" data-all_status="1" bindtap="statusChange">
        <view class="span nav_txt nav_receiving">已取消
            <view class="b nav_receiving_num" style="display:none;"></view>
        </view>
    </view>
</view>

<block ms-repeat-order="orders" wx:key="" wx:for-item="order" wx:for="{{orders}}">
<view class='order_list'>
  <!--点击跳转到订单列表页  -->
<!--   <view class='order_bottom' bindtap='viewOrder'> -->
  <view class='order_bottom'  >
    <navigator url="/pages/orderDetail/orderDetail?id={{order.order_id}}" >
    <view class='standard' style='justify-content:flex-start;'>
      <view class='cover'>
        <image src='{{order.order_goods.image_url}}'></image>
      </view>
      <view class='order_info'>
       <view class='standard' style='justify-content:space-between;'>
        <view class='info_left'>
          <view class='vip_price'>
            会员价<span style="font-size:32rpx;font-weight:590;">{{order.order_amount}}</span>
          </view>
          <view class='date'>{{order.order_time}}</view>
          <view class='delivery'>由商家提供配送服务</view>
        </view>
<!--         <view class='info_right'></view> -->
       </view>
      </view>
    </view>
    </navigator>
  </view>
</view>
</block>    