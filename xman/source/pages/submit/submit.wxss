@import "/lib/style/stylesheet.wxss";
page{
  background-color: #f5f5f5;
}
.notice{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #fa3d34;
  color: #fff;
  font-size: 20rpx;
}
.notice_mark::after{
  font-family: 'iconfont';
  content: '\e603';
  font-size: 30rpx;
}
.notice_text{
  margin-left: 5rpx;
}
.previewImage{
  width:100%;
  height:100%;
}
.show_QR{
  box-sizing:border-box;
  padding:20px;
}
.view_image{
  float:left;
  width:45%;
  height:200px;
  margin:2%;
}
.address,.time,.add_li{
  width: 100%;
  background-color: #fff;
}
.time{
  padding-bottom: 10rpx;
}
.standard{
  width: 94%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
}
.address{
  height: 150rpx;
  line-height: 150rpx;
}
.time{
  height: 60rpx;
  line-height: 60rpx;
}
.add_mark,.add_mark1{
  width: 10%;
  margin-left: 2%;
  
}
.add_mark::after{
  font-family: 'iconfont';
  content: '\e609';                                  
  font-size: 40rpx;
  font-weight: 600;
  color: #fa3d34;
}
.add_mark1::after{
  color: #fff;
}
.add_text,.add_info{
  width: 80%;
  display: flex;
  flex-direction: column;
  color: #333;
  font-weight: bold;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.arrive_time{
  font-size:29rpx;
  color:#5bbc04;
  padding-left:5%;
}

.username,.person_msg{
  height: 75rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}
.add_detail{
  height: 75rpx;
  line-height: 50rpx;                                                                        
  font-size: 26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.edit::after,.gopay::after{
  font-family: 'iconfont';
  content: '\e645';
  font-size: 32rpx;
  font-weight: bold;
  color: #999;
}
/*分割线  */
.sep{
  width: 100%;
  background-color: #fff;
  height: 20rpx;
  line-height: 10rpx;
  display: flex;
  flex-direction: row;
}
.sperate::after{
  font-family: 'iconfont';
  content: '\e601';
  font-weight: 500;
  color: #ffb200;
}

/*查看具体时间  */



/*订单信息  */
.order,.minus,.sum,.way{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.shop_logal,.minus_logal{
  width: 10%;
  margin-left: 2%;
}
.shop_logal::after{
  font-family: 'iconfont';
  content: '\e70b';
  font-size: 40rpx;
  font-weight: 500;
  color: #ffb200;
}
.shop_name{
  width: 48%;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.service{
  width: 40%;
  font-size: 28rpx;
  font-weight: 400;
  color: #666;
  text-align: right;
  
}

.minus,.sum{
  margin-top: 1px;
}
.minus_logalbg{
  margin-top: 12rpx;
   width: 50rpx;
   height: 36rpx;
   line-height: 36rpx;
   text-align: center;
   background-color: #fa3d34;
   color: #fff;
   font-size: 22rpx;
}

.number{
  color: #fa3d34;
}
.original{
  color: #999;
  text-decoration: line-through;
}
.nowprice{
  color: #333;
}
.number,.original,.nowprice{
  font-weight: 600;
}

.extra{
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  color: #999;
  font-size: 26rpx;
}
.fee{
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
  margin-left: 15%;
  margin-right: 4%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
/*总计  */
.sum{
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.fee_left{
  width: 60%;
}
.way{
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
/*底部固定  */
.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  z-index: 999;
  color: #fff;
}
.tobepaid{
  width: 75%;
  background-color: #5bbc04;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  letter-spacing: 2px;
}
.pay_text{
  margin-left: 5%;
}
.pay_price{
  color: #fa3d34;
  font-weight: bold;
  padding-left: 3rpx;
}
.gosub{
  width: 25%;
  background-color: #4c9b07;
  font-size: 30rpx;
  text-align: center;
}
/*提示  */
.tips{
  position: fixed;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #f4ed8e;
}
.tip_logal::after{
  font-family: 'iconfont';
  content: '\e600';
  font-size: 30rpx;
  color: #fa3d34;
  position: relative;
  top: -3rpx;
}
.tip_text{
  padding-left: 8rpx;
  font-size: 22rpx;
  color: #666;
}

/*新增地址  */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
.add_plus{
  width: 100%;
  height: 800rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
}
.myall{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #5bbc04;
  color: #fff;
  font-size: 32rpx;
  
}
.theme{
  width: 95%;
  text-align: center;
}
.close::after{
  font-family: 'iconfont';
  content: '\e685';
  font-size: 35rpx;
  font-weight: bold;
}

.add_li{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  border-bottom: 1px solid #f5f5f5;
  
}

.add_edit{
  width: 12%;
  text-align: center;
}
.person_msg{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
}
.u_name,.sex{
  padding-right: 5%;
}
.u_telno,.sex{
  font-size:24rpx;
}
.add_edit::after{
  font-family: 'iconfont';
  content: '\e63a';
  font-size: 40rpx;
  color: #999999;
}
.checked::after{
  font-family: 'iconfont';
  content: '\e621';
  font-size: 60rpx;
  color: #ffb200;
}









.symbol{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f4f4f4;
  position: fixed;
  left: 0;
  bottom: 0;
}
.click_add{
  margin-left: 37%;
  width: 40%;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #5bbc04;
  align-items: center;
}
.click_mark::after{
  font-family: 'iconfont';
  content: '\e718';
  font-size: 34rpx;
}
.click_text{
   font-size: 32rpx;
   padding-left: 10rpx;
}


