<form bindsubmit="formSubmit">

  <view class="itemView">
    <span>商品名:</span> 
    <input class="input" type="text" name="goodName" placeholder="请输入商品名称" bindinput="goodNameInput" value='{{goodName}}' />
  </view>       
  <view class="itemView">
    <span>库存:</span>
    <input class="input" type="number" name="storageInput" placeholder="请输入库存" bindinput="bindStorageInput" value='{{storageNumber}}'/>
  </view>
  <view class="itemView">
      <span>单价:</span>
    <input class="input" type="number" name="price" placeholder="请输入市场价" bindinput="bindPrice" value='{{price}}'/>
  </view>
 
  <view class="itemView">
    　商品描述：
      <input class="input" type="text" name="goodsDesc" placeholder="请输入商品描述" bindinput="bindGoodsDesc" value='{{goodsDesc}}'/>
    </view>

