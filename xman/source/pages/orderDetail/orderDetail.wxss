.submit{
  position: absolute;
  bottom: 10rpx;
  width: 80%;
  margin-left: 10%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #108EE9;
  border-radius: 6rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 2px;
}

.add_shop_red {
  position: fixed;
  height: 70px;
  line-height: 70px;
  text-align: center;
  width: 100%;
  bottom: 0px;
  z-index: 100;
  max-width: 640px;
}

.inner_red {
  margin-top: 10px;
  font-size: 20px;
  margin-left: 5%;
  margin-right: 5%;
  height: 50px;
  line-height: 50px;
  border-radius: 3px;
  background-color: #5bbc04;
}

.add_text_red {
  display: inline-block;
  min-width: 300px;
}