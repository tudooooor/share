                        <button class="submit hidden" style="background-color: #F43530;" id="deletes" bindtap="deletes" data-address_id="{{address.address_id}}">删除</button>
                    </block> -->
                </view>
              </view>
            </view>
        </form>

     <!--  <form name="theForm" id="theForm" class="form" report-submit="true" bindsubmit="btnOrderDone">
          <view><button formType="submit" class="pay2_btn" loading="{{btn_order_done ? true : false}}"  id="btn_order_done" style="{{btn_order_done || !address ? 'opacity: 0.4;' : ''}}" >
            <block wx:if="{{btn_order_done}}">正在支付 请稍候</block>
              <block wx:elif="{{cancel_pay}}">继续支付</block>
                <block wx:else>提交订单</block>
                  </button>
          </view>
      </form>
 -->

    </view>
  </view>
</view>
</scroll-view>

