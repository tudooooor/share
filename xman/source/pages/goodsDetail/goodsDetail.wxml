<scroll-view scroll-y="true" style="height: 1110rpx">
<view class="goods-banner" id="banner">
  <view class="div banner-index" hidden="{{gallery.length <= 1}}">
    <view style='color:white;font-size:34rpx'>{{swiperCurrent}}</view>
    <view style='margin-left:4rpx;opacity:0.7'>/{{gallery.length}}</view>
  </view>
  <!--图片详情图片轮播-->
  <!--style='height:{{imageheight}}px;background-color:#fff;'-->
  <swiper bindchange="bindchange" indicator-color="#eceded" indicator-active-color="#e02e24" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" wx:if="{{gallery}}" circular="true" style="height:{{/*goods_banner.height || */'750rpx'}}">
    <block wx:key="item" wx:for="{{gallery}}" wx:for-index="idx">
      <swiper-item>
        <image lazyload="true" bindtap="previewImage" data-idx="{{idx}}" src="{{item.img_url}}" class="slide-image"  />
      </swiper-item>
    </block>
  </swiper>
</view>

<view class='price' style='font-size: 60rpx;'>
  <view class='standard'>￥
    <view wx:if="{{minPrice != 0}}">{{minPrice}}~</view>{{maxPrice}}</view>
</view>
<!--商品简介  -->
<view class='information'>
  <view style='margin-left:30rpx;margin-right:30rpx;padding-bottom:20rpx'>
    <text class='shop_name'>{{goods_name}}</text>
  </view>
</view>


<navigator class='standard' style='margin:14rpx 0;' bindtap='maskDisplay'>
  <view class='std_right1'>商品类型</view>
  <view class='good_specifications'>{{goodSpecifications}}</view>
  <view class='fun_li' >
    <view class='arrow'></view>
  </view>
</navigator>

<view style='background-color:white'><view style='padding:20rpx'>商品详情</view></view>

<view class='information'>
  <view style='margin-left:30rpx;margin-right:30rpx'>
    <text class='shop_name'>{{goods_desc}}</text>
  </view>
</view>
<view wx:for="{{garreryDetail}}" wx:key="item">
  <image src="{{item.img_url}}" style='width:100%; height:100%' mode="widthFix"></image>
</view>

<!--展示购物车  -->
<view class='mask' style='display:{{maskShow}}'>
  <view class='shopcar'>
    <view class='goods'>
      <view class='standard' style='justify-content:flex-start;'>
        <image src="{{gallery[0].img_url}}"></image>
        <view class='goods_info'>
          <view class='price' style='font-size: 60rpx;'>
            <view class='standard'>￥
              <view wx:if="{{minPrice != 0}}">{{minPrice}}~</view>{{maxPrice}}</view>
          </view>
          <view class='close' bindtap='maskHide'></view>
        </view>
      </view>
      <!--规格选择  -->
      <view class='standard' style='font-size:28rpx;color:#333;line-height:50rpx;margin:0 30rpx'>
        规格选择
      </view>

      <view wx:for="{{goodCategorys}}" wx:key="item" wx:index="index" style='margin:0 30rpx'>
        <view wx:if="{{item.storageInput != ''}}" class='standard' style='justify-content:space-between;;margin-top:20rpx;'>
          <view class='num_left'>
            <view class='std_left'>【{{item.specifications}}】</view>
            <view class='std_right'>库存：{{item.storageInput}}</view>
            <view class='fee'>￥{{item.price}}</view>
          </view>
          <view class='num_right'>
            <view class='sub' bindtap='sub' data-id="{{index}}"></view>
            <view class='count' style='margin-top:8rpx;'>{{count[index]}}</view>
            <view class='plus' bindtap='plus' data-id="{{index}}"></view>
          </view>
        </view>
      </view>
      

<form bindsubmit="btnOrderDone" name="theForm" id="theForm" class="form" report-submit="true">
    <view class=" div wx_wrap">
      <view class="address_new">


        <view class="p">
                    <label for="name"><view class="span tit"></view>
                        <input id="name" name="receive_name" value="{{address.receive_name}}" placeholder="名字" type="text" bindblur='receive_function'/>
                        <view class="span" id="updateTip1" style="color: #F43530; {{!receive_name_tip ? 'display: none;' : ''}}">请填写姓名</view>
                    </label>
                </view>
        <view class="p">
                    <label for="mobile"><view class="span tit">手机号码</view>
                        <input id="mobile" name="mobile" value="{{address.mobile}}" placeholder="手机号码" type="number" bindblur='mobile_function'/>
                        <view class="span" id="updateTip2" style="color: #F43530; {{!mobile_tip ? 'display: none;' : ''}}">请填写正确的手机号</view>
                    </label>
                </view>
             
<view class='standard' style='justify-content:flex-end;font-size:32rpx;color:#fa3137;line-height:80rpx;margin:0 30rpx'>
        总价：￥{{totalPrice}}
      </view>
      
     <view class="p action">
                    <button class="pay2_btn" id="btn_order_done" style="{{btn_order_done || !address ? 'opacity: 0.4;' : ''}}" formType="submit">
                    <block wx:if="{{btn_order_done}}">正在支付 请稍候</block>
                    <block wx:elif="{{cancel_pay}}">继续支付</block>
                    <block wx:else>提交订单</block>
                    </button>
