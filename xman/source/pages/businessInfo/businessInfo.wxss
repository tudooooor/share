@import '/lib/style/stylesheet.wxss';

.std_left{
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
}
.cover{
  width: 25%;
  height: 180rpx;
  border-radius: 100rpx;
}
.cover image{
  margin-top: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
}
.information{
  width: 75%;
}
.shop_name{
  height: 70rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}
.shop_sale{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
}
.flower,.score{
  color: #fa3137;
  font-size: 24rpx;
}
.flower::after{
  font-family: 'iconfont';
  content: '\e604';
  color: #fa3137;
  font-size: 24rpx;
  font-weight: bold;
}
.sales{
  margin-left: 7%;
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
}
.shop_rules{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
}
.box{
  min-width: 23%;
  overflow: scroll;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  margin-top: 13rpx;
  border-right: 1px solid #dcdcdc;

}
.std_right{
  width: 20%;
  height: 180rpx;
  line-height: 180rpx;
}
.rank{
  margin-top: 70rpx;
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 14rpx;
  border:1px solid #ffb200;
  color: #ffb200;
  font-size: 20rpx;
  text-align: center;
}

.details{
  width: 94%;
  margin: 20rpx auto;
  background-color: #f4f4f4;
  color: #333;
  font-size: 24rpx;
  font-weight: 300;
  border-radius: 4px;
}
.first_line{
  height: 40rpx;
  line-height: 40rpx;
  
}
.announcement{
  width: 100%;
  min-height:120rpx;
  border-top: 1px solid #e2e2e2; 
}
/*活动与属性  */
.property{
  width: 96%;
  margin: auto 2%;
  height: 50rpx;
  line-height: 30rpx;
  font-size:30rpx;
  color: #333;
  font-weight: 400;
  border-bottom: 1px solid #dcdcdc; 
}
.content{
  height: 220rpx;
  overflow: scroll;
}
.list{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
}
.minus_logal{
  width: 10%;
  margin-left: 2%;
}
.minus_logalbg,.minus_logalbg1,.minus_logalbg2{
   margin-top: 7rpx;
   width: 50rpx;
   height: 36rpx;
   line-height: 36rpx;
   text-align: center;
   color: #fff;
   font-size: 22rpx;
}
.minus_logalbg{
  background-color: #ffb200;
}
.minus_logalbg1{
  background-color: #fa3d34;
}
.minus_logalbg2{
  background-color: #b822af;
}
.shop_name1{
  font-size: 24rpx;
  color: #999;
}

/*收款码  */
.code{
  width: 100%;
  border-top: 10px solid #f2f2f2;
}
.title{
  width: 92%;
  margin: auto 4%;
  height: 60rpx;
  line-height: 60rpx;
  font-size:30rpx;
  color: #333;
  font-weight: 400;
  border-bottom: 1px solid #dcdcdc; 
}

.upload{
  width: 33%;
  margin: 20rpx auto;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #62c20e;
}
.square{
  width: 60%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.square_left{
  width: 50%;
  
}
.left_text,.tips{
  font-size: 22rpx;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
