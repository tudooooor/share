@import "/lib/style/stylesheet.wxss";

page{
  background-color: #f5f5f5;
}

.title{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
  letter-spacing: 1px;
}

.person_info{
  width: 100%;
  height: 210rpx;
  background-color: #fff;
}
.standard{
  height: 70rpx;
  line-height: 70rpx;
}
.uname,.sex{
  width: 20%;
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
  letter-spacing: 2px;
}
.writein{
  width: 80%;
  border-bottom: 1px solid #f0f0f0;
}
.writein input{
  width: 100%;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
  letter-spacing:1px;
  font-weight: bold;
}
.arrow::after{
  font-family: 'iconfont';
  content:'\e645';
  color: #666;
  font-size: 34rpx;
  font-weight: bold;
}

.explanation{
  width: 100%;
  height: 140rpx;
}
.save{
  width: 92%;
  margin: 20rpx auto;
  background-color: #5bbc04;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  letter-spacing: 2px;
  font-weight: 500;
  border-radius: 2px;
}


.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
.type{
  width: 20%;
  margin:350rpx auto;
  height: 210rpx;
  background-color: #fff;
  border-radius: 8px;
}
.mark{
  margin-left: 10%;
  margin-right: 5%;
  width: 20%;
  line-height: 65rpx;
}
.mark::after{
  font-family: 'iconfont';
  content:'\e612';
  color: #666;
  font-size: 28rpx;
}
.type_name{
  font-size: 28rpx;
}
.writein{
  display: flex;
  flex-direction: row;
}
.man,.woman{
  margin-top: 20rpx;
  margin-right: 5%;
  width: 15%;
  height: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
  border: 1px solid #f0f0f0;
  font-size: 24rpx;
  text-align: center;
  color: #999;
}